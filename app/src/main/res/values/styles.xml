
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>






    <!-- =============================================================== -->
    <!--MY APP THEMES & STYLES-->
    <!-- =============================================================== -->


    <!-- COMMON STYLES-->
    <style name="text_large">
        <item name="android:textSize">@dimen/text_large_size</item>
    </style>
    <style name="text_regular">
        <item name="android:textSize">@dimen/text_regular_size</item>
    </style>
    <style name="text_table_heading">
        <item name="android:textSize">@dimen/text_table_heading_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_table_heading_small">
        <item name="android:textSize">@dimen/text_table_heading_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>




    <!-- =============================================================== -->
    <!-- GrassFruitsTheme styles -->
    <!-- =============================================================== -->

    <style name="page_background_green_beige">
        <item name="android:background">@drawable/green_beige_gradient_background</item>
    </style>

    <style name="page_background_img_gf">
        <item name="android:background">@drawable/grass_fruits_bg</item>
    </style>

    <!--Text styles-->
    <style name="text_large_gf">
        <item name="android:textSize">@dimen/text_large_size</item>"
    </style>

    <!--Button styles-->
    <style name="button_gf">
        <item name="android:background">@drawable/button_gf</item>
        <item name="android:layout_marginTop">@dimen/button_margin_within</item>-->

        <item name="android:textColor">@android:color/background_dark</item>
        <!--<item name="android:textSize">@dimen/text_large_size</item>-->
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#888</item>
        <!--<item name="android:textStyle">bold</item>-->

    </style>

    <style name="radioStyle_gf">
        <item name="android:textColor">@color/textColorRadioButtonGF</item>
        <item name="android:textSize">@dimen/text_regular_size</item>
    </style>






    <!-- =============================================================== -->
    <!-- SpaceAliensTheme styles -->
    <!-- =============================================================== -->

    <style name="page_background_blue_black">
        <item name="android:background">@drawable/blue_black_gradient_background</item>

    </style>

    <style name="page_background_img_sa">
        <item name="android:background">@drawable/space_aliens_bg</item>

    </style>

    <!--Text styles-->
    <style name="text_large_sa">
        <item name="android:textSize">@dimen/text_large_size</item>"
    </style>


    <!--Button Styles-->
    <style name="button_sa">
        <item name="android:background">@drawable/button_sa</item>
        <item name="android:layout_marginTop">@dimen/button_margin_within</item>

        <!--<item name="android:textColor">@android:color/background_dark</item>-->
        <!--<item name="android:textSize">@dimen/text_large_size</item>-->
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#DDD</item>
        <!--<item name="android:textStyle">bold</item>-->

    </style>

    <style name="radioStyle_sa">
        <item name="android:textColor">@color/textColorRadioButtonSA</item>
        <item name="android:textSize">@dimen/text_regular_size</item>
    </style>


  <!--    -->



    <!--FOR ACTION BAR-->

    <style name="MyActionBar.MenuTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textColor">#888888</item> <!--
    <item name="android:textStyle">bold</item> -->
        <item name="android:textSize">10sp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>



</resources>
